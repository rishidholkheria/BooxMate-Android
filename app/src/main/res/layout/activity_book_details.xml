                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/rect_button"
                            android:gravity="center"
                            android:text="MRP"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="25dp"
